<h1> Product List </h1>
<table>
<tbody>
<thead>
<th>Name</th>
<th>Description</th>
<th>Price</th>
</thead>
</tbody>

</tbody>
<% @products.each do |product| %>
  <tr>
    <td> <%= product.name %> </td>
    <td> <%= product.description %> </td>
    <td> <%= product.price %> </td>
    <td>
      <%= link_to "Update", edit_product_path(product) %>
      <%= link_to "Delete", product, method: :delete, data: {confirm: "¿Deseas eliminar este artículo?"} %>
    </td>
  </tr>
<% end %>

</table>
